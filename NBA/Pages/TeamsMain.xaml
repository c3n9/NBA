                                                               Click="HLFirstLineup_Click"
                                                               FontSize="18">
                                                        First Lineup
                                                    </Hyperlink>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock Text="Pacific"
                                   HorizontalAlignment="Center"
                                   Foreground="Gray"
                                   FontFamily="Verdana"
                                   FontSize="20"
                                   Grid.Column="1" />
                        <ListView x:Name="LVPacific"
                                  Grid.Row="1"
                                  Grid.Column="1">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding Logo}"
                                               Height="90" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TeamName}"
                                                       Foreground="Gray"
                                                       FontFamily="Verdana"
                                                       FontSize="20" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock>
                                                    <Hyperlink TextDecorations="None"
                                                               Foreground="#6995c2"
                                                               Click="HLRoster_Click"
                                                               FontSize="18">
                                                        Roster
                                                    </Hyperlink>
                                                </TextBlock>
                                                <TextBlock Margin="10,0,10,0">
                                                    <Hyperlink TextDecorations="None"
                                                               Foreground="#6995c2"
                                                               Click="HLMatchup_Click"
                                                               FontSize="18">
                                                        Matchup
                                                    </Hyperlink>
                                                </TextBlock>
                                                <TextBlock>
                                                    <Hyperlink TextDecorations="None"
                                                               Foreground="#6995c2"
                                                               Click="HLFirstLineup_Click"
                                                               FontSize="18">
                                                        First Lineup
                                                    </Hyperlink>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock Text="Southwest"
                                   HorizontalAlignment="Center"
                                   Foreground="Gray"
                                   FontFamily="Verdana"
                                   FontSize="20"
                                   Grid.Column="2" />
                        <ListView x:Name="LVSouthwest"
                                  Grid.Row="1"
                                  Grid.Column="2">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding Logo}"
                                               Height="90" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TeamName}"
                                                       Foreground="Gray"
                                                       FontFamily="Verdana"
                                                       FontSize="20" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock>
                                                    <Hyperlink TextDecorations="None"
                                                               Foreground="#6995c2"
                                                               Click="HLRoster_Click"
                                                               FontSize="18">
                                                        Roster
                                                    </Hyperlink>
                                                </TextBlock>
                                                <TextBlock Margin="10,0,10,0">
                                                    <Hyperlink TextDecorations="None"
                                                               Foreground="#6995c2"
                                                               Click="HLMatchup_Click"
                                                               FontSize="18">
                                                        Matchup
                                                    </Hyperlink>
                                                </TextBlock>
                                                <TextBlock>
                                                    <Hyperlink TextDecorations="None"
                                                               Foreground="#6995c2"
                                                               Click="HLFirstLineup_Click"
                                                               FontSize="18">
                                                        First Lineup
                                                    </Hyperlink>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
